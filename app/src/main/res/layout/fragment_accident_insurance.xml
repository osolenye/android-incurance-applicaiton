<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.AccidentInsuranceFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Несчастный случай"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="236dp"
        android:layout_marginTop="16dp"
        android:background="@color/background_green"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:id="@+id/accident_date_begin"
                android:background="@drawable/rounded_corner"
                android:inputType="date"
                android:hint="Дата начала" />

            <EditText
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:inputType="date"
                android:id="@+id/accident_date_end"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="10dp"
                android:hint="Дата конца" />
        </LinearLayout>
        <EditText
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:id="@+id/accident_travel_country"
            android:hint="Территория страхования" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Застрахованы ли в других странах"
            android:textColor="@color/white" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/button_yellow"
            android:id="@+id/btn_create_accident_policy"
            android:text="Далее"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
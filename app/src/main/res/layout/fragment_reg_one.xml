<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.RegOneFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="224dp"
        android:layout_height="124dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/organization_name"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Название организации" />

    <EditText
        android:id="@+id/okpo_code"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Код ОКПО" />

    <EditText
        android:id="@+id/registration_number"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Регистрационный номер" />

    <EditText
        android:id="@+id/leader_name"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="ФИО руководителя" />

    <EditText
        android:id="@+id/leader_position"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Должность руководителя" />

    <EditText
        android:id="@+id/representative_name"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="ФИО доверенного лица" />

    <EditText
        android:id="@+id/legal_address"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Юридический адрес" />

    <EditText
        android:id="@+id/actual_address"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:hint="Фактический адрес" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_yellow"
        android:id="@+id/btn_reg_one_submit"
        android:text="Регистрация" />

</LinearLayout>
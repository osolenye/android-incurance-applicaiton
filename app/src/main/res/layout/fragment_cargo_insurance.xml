<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.CargoInsuranceFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Страхование грузов"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/background_green"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:hint="Наименование груза" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Груз новый"
            android:textColor="@color/white" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="груз хрупкий"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_corner"
                android:hint="Длина" />

            <EditText
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="10dp"
                android:hint="Ширина" />

            <EditText
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="10dp"
                android:hint="Высота" />
        </LinearLayout>

        <EditText
            android:layout_width="296dp"
            android:layout_marginTop="10dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:hint="Объем груза" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner"
                android:hint="Кол-во единиц груза" />

            <EditText
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner"
                android:hint="Кол-во грузовых мест" />
        </LinearLayout>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:hint="Гос. номер тягача" />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:hint="Гос. номер прицепа" />
        <EditText
            android:layout_width="296dp"
            android:layout_marginTop="10dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:hint="Пункт отправления" />
        <EditText
            android:layout_width="296dp"
            android:layout_marginTop="10dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:hint="Пункт назначения" />
        <EditText
            android:layout_width="296dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:hint="Страховая сумма" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_corner"
                android:hint="Дата начала" />

            <EditText
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_corner"
                android:hint="Дата конца" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/button_yellow"
            android:text="Далее"
            android:layout_marginTop="30dp"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>